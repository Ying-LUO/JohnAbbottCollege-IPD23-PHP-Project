{% extends "master.html.twig" %}



{% block title %}
    Item Details
{% endblock title %}

{% block stylesheet %}
    <link rel="stylesheet" href="/styles/itemdetails.css">
{% endblock stylesheet %}

{% block content %}

<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    
                    <div class="preview-pic tab-content">
                      <div class="tab-pane active" id="pic-1"><img src="/uploads/{{selectedItem.photo}}" /></div>
                      <div class="tab-pane" id="pic-2"><img src="http://placekitten.com/400/252" /></div>
                      <div class="tab-pane" id="pic-3"><img src="http://placekitten.com/400/252" /></div>
                      <div class="tab-pane" id="pic-4"><img src="http://placekitten.com/400/252" /></div>
                      <div class="tab-pane" id="pic-5"><img src="http://placekitten.com/400/252" /></div>
                    </div>  
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">{{selectedItem.equipName}}</h3>                    
                    <p class="product-description">{{selectedItem.equipDescription}}</p>
                    <div class="btn-group-toggle d-flex justify-content-start" data-toggle="buttons">
                        <h5 class="mr-3">Rental Type: </h5>
                        <label class="btn btn-secondary active mr-4">
                        <input type="radio" name="month" id="hatchback" autocomplete="off" value="month" checked="checked"> Month
                        </label>
                        <label class="btn btn-secondary">
                        <input type="radio" name="season" id="sedan"  value="season" autocomplete="off"> Season
                        </label>                    
                    </div>                  
                    <h4 class="price mt-3">price: <span>$</span><span id="price">{{selectedItem.rateByMonth}}</span></h4>
                    
                    <p class="vote"><strong>price</strong> based on selected rental type</p>
                    <div class="action">
                        <button class="add-to-cart btn btn-sm" type="button">add to cart</button>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  
{% endblock content %}

{% block scripts %}
    <script>
        $(document).ready(function() {
 
     $('input[name=season]').on('click',function() {
              price = {{selectedItem.rateBySeason}};   
                //price = encodeURIComponent(price);
                $('#price').html(price);
 });

 $('input[name=month]').on('click',function() {
              price = {{selectedItem.rateByMonth}};
                //price = encodeURIComponent(price);
                $('#price').html(price);
 });

});

    </script>
{% endblock scripts %}